{
    "version": 3,
    "configurePresets": [
      {
        "name": "dev-configure",
        "hidden": true,
        "binaryDir": "build_dev",
        "cacheVariables": {
          "CMAKE_BUILD_TYPE": "Debug",
          "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
          "DKSDK_DEV_TOOLS": "ON",
          "DKSDK_OPAM_REPOSITORY": "git+file://${sourceDir}/fetch/dksdk-opam-repository/.git",
          "DKSDK_OPAM_REPOSITORY_JS": "git+file://${sourceDir}/fetch/dksdk-opam-repository-js/.git",
            "FETCHCONTENT_SOURCE_DIR_DKSDK-OPAM-REPOSITORY": {
            "type": "FILEPATH",
            "value": "${sourceDir}/fetch/dksdk-opam-repository"
          },
          "FETCHCONTENT_SOURCE_DIR_DKSDK-OPAM-REPOSITORY-JS": {
            "type": "FILEPATH",
            "value": "${sourceDir}/fetch/dksdk-opam-repository-js"
          }  
        }
      },
      {
        "name": "dev-source-dirs",
        "hidden": true,
        "cacheVariables": {
          "FETCHCONTENT_SOURCE_DIR_DKSDK-CMAKE": {
            "type": "FILEPATH",
            "value": "${sourceParentDir}/dksdk-cmake"
          }
        }
      },
      {
        "name": "dev-AppleSilicon",
