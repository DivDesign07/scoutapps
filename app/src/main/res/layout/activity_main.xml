<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <!-- Cards to make the design look nice -->
    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_38sdp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_115sdp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/offwhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_54sdp"
        android:gravity="center"
        android:text="Home Screen"
        android:textAllCaps="true"
        android:textColor="@color/Text"
        android:textSize="@dimen/_19ssp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_85sdp"
        android:gravity="center"
        android:text="Sonic Squirrels"
        android:textColor="@color/accent"
        android:textSize="@dimen/_12ssp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Scout Name Layout -->
    <TextView
        android:id="@+id/Name_Label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_138sdp"
        android:text="Scout Name :"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/Name_Input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_155sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Name ..."
        android:inputType="text"
        android:maxLines="1"
        android:padding="@dimen/_9sdp"
        android:singleLine="true"
        android:textAlignment="gravity"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Team Name Layout -->
    <TextView
        android:id="@+id/TeamNum_Label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_192sdp"
        android:text="Team Number # :"
        android:textColor="@color/black"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/TeamNum_Input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_208sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Team Number ..."
        android:inputType="number"
        android:maxLines="1"
        android:padding="@dimen/_9sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Start Scouting Button -->
    <Button
        android:id="@+id/START_SCOUTING"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_250sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/accent"
        android:drawablePadding="@dimen/_4sdp"
        android:text="Start Scouting"
        android:textColor="@color/Text"
        android:textSize="@dimen/_16ssp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Pit Scouting Button -->
    <Button
        android:id="@+id/PIT_SCOUTING"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_292sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/button_border"
        android:text="Pit Scouting"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Share Pit scouting Button -->
    <Button
        android:id="@+id/SHARE_PIT_SCOUTING"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_330sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/button_border"
        android:text="Share Pit Scouting Data"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- View History Button -->
    <Button
        android:id="@+id/HISTORY"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_369sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/button_border"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="@dimen/_12ssp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nuke Data Button -->
    <Button
        android:id="@+id/NUKE_DATA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_408sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/offwhite"
        android:text="NUKE DATA"
        android:textColor="@color/background"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>