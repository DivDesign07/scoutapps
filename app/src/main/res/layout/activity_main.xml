<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">


    <!-- Cards to make the design look nice -->
    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/secondary" />
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/offwhite" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Home Screen"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/Text"
        android:textSize="50sp"
        android:visibility="visible" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="220dp"
        android:gravity="center"
        android:text="Sonic Squirrels"
        android:textColor="@color/accent"
        android:textSize="30sp"
        android:visibility="visible" />

    <!-- Scout Name Layout -->
    <TextView
        android:id="@+id/Name_Label"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="top|center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="360dp"
        android:text="Scout Name :"
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/Name_Input"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/white"
        android:ems="10"
        android:hint="Name ..."
        android:maxLines="1"
        android:padding="22dp"
        android:textAlignment="gravity"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <!-- Team Name Layout -->
    <TextView
        android:id="@+id/TeamNum_Label"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="top|center"
        android:layout_marginStart="75dp"
        android:layout_marginTop="500dp"
        android:text="Team Number # :"
        android:textColor="@color/black"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/TeamNum_Input"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="75dp"
        android:layout_marginStart="75dp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:ems="10"
        android:hint="Team Number ..."
        android:maxLines="1"
        android:padding="22dp"
        android:inputType="number"
        android:textSize="20sp" />

    <!-- Start Scouting Button -->
    <Button
        android:id="@+id/START_SCOUTING"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="650dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="@color/accent"
        android:background="@drawable/rounded_rectangle_subtle"
        app:backgroundTint="@null"
        android:text="Start Scouting"
        android:textColor="@color/Text"
        android:textSize="40sp" />

    <!-- Pit Scouting Button -->
    <Button
        android:id="@+id/PIT_SCOUTING"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="760dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/button_border"
        app:backgroundTint="@null"
        android:text="Pit Scouting"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <!-- Share Pit scouting Button -->
    <Button
        android:id="@+id/SHARE_PIT_SCOUTING"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="860dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/button_border"
        app:backgroundTint="@null"
        android:text="Share Pit Scouting Data"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <!-- View History Button -->
    <Button
        android:id="@+id/HISTORY"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="960dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:background="@drawable/button_border"
        app:backgroundTint="@null"
        android:text="History"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <!-- Nuke Data Button -->
    <Button
        android:id="@+id/NUKE_DATA"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="1060dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:backgroundTint="@color/offwhite"
        android:background="@drawable/rounded_rectangle_subtle"
        app:backgroundTint="@null"
        android:text="NUKE DATA"
        android:textColor="@color/background"
        android:textStyle="bold"
        android:textSize="35sp" />

</RelativeLayout>