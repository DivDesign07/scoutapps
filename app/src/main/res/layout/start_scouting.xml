<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/start_scouting_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <!-- Cards to make the design look nice -->
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_39sdp"
        android:layout_marginStart="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_77sdp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/secondary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_212sdp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/offwhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_9sdp"
        android:gravity="center"
        android:inputType="none"
        android:text="Start Scouting"
        android:textAllCaps="true"
        android:textColor="@color/Text"
        android:textSize="@dimen/_23ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Robot Image Layout-->
    <TextView
        android:id="@+id/Robot_Selected"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_86sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:text="Team # :"
        android:textAlignment="center"
        android:textColor="@color/Text"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_96sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_110sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        app:srcCompat="@android:drawable/ic_menu_gallery"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Choose match Layout-->
    <TextView
        android:id="@+id/Choose_Match_Label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_227sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:text="Select Match :"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_254sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <EditText
            android:id="@+id/Choose_Match_Input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_subtle"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Choose Match..."
            android:inputType="number"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/MATCH_INCREMENT"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/rounded_rectangle_subtle"
            android:backgroundTint="@color/background"
            android:text="+"
            android:textColor="@color/accent"
            android:textSize="@dimen/_16ssp"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/MATCH_DECREMENT"
            android:layout_width="@dimen/_29sdp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rectangle_subtle"
            android:backgroundTint="@color/background"
            android:text="-"
            android:textColor="@color/accent"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

    <!-- Robot Position Layout -->
    <TextView
        android:id="@+id/Robot_Position_Label"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_gravity="top|center"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_288sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:text="Robot Position :"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <AutoCompleteTextView
        android:id="@+id/dropdown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_315sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/dropdown_background"
        android:hint="Select an item"
        android:inputType="none"
        android:textAlignment="center"
        android:textColor="@color/background"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Start Button -->
    <Button
        android:id="@+id/START"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_361sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/accent"
        android:text="Choose Robot"
        android:textColor="@color/Text"
        android:textSize="@dimen/_16ssp"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Go Back Button -->
    <Button
        android:id="@+id/BACK"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_29sdp"
        android:layout_marginStart="@dimen/_29sdp"
        android:layout_marginTop="@dimen/_404sdp"
        android:layout_marginEnd="@dimen/_29sdp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/thirdButton"
        android:text="Return Home "
        android:textColor="@color/background"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>