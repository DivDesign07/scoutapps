<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/START_SCOUTING_MATCH_SELECTOR_CARD"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"

            app:cardBackgroundColor="#B5CAD7"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="#F39665"
                    android:text="Choose Match:"
                    android:textSize="25dp"
                    android:textAlignment="center"

                    android:layout_marginRight="10dp"/>

                <include
                    layout="@layout/counter"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right" />


        </androidx.cardview.widget.CardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/START_SCOUTING_MATCH_SELECTOR_CARD"

        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#B5CAD7"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"

            android:text="ROBOT POSITION:"
            android:textSize="25dp"
            android:textAlignment="center"

            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/START_SCOUTING_ROBOT_POSITION_BUTTON"
            android:layout_width="wrap_content"
            android:minWidth="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="RED_1"


            />


    </com.google.android.material.card.MaterialCardView>







</RelativeLayout>