<?xml version="1.0" encoding="utf-8"?>
 <androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- Cards to make the design look nice -->
    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/rounded_rectangle_subtle"
        android:backgroundTint="@color/secondary" />
    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/secondary" />
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/rounded_rectangle"
        android:backgroundTint="@color/offwhite" />

    <!-- Title -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="Start Scouting"
        android:inputType="none"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/Text"
        android:textSize="60sp"/>



    <!-- Choose match Layout-->
    <TextView
        android:id="@+id/Choose_Match_Label"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_gravity="top|center"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="590dp"
        android:text="Select Match :"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40sp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="660dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Choose_Match_Input"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginEnd="25dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_rectangle_subtle"
            android:backgroundTint="@color/white"
            android:ems="10"
            android:hint="Choose Match..."
            android:inputType="text"
            android:maxLines="1"
            android:padding="0dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/MATCH_INCREMENT"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="25dp"
            android:background="@drawable/rounded_rectangle_subtle"
            android:backgroundTint="@color/background"
            android:text="+"
            android:textColor="@color/accent"
            android:textSize="40sp"
            app:backgroundTint="@null" />
        <Button
            android:id="@+id/MATCH_DECREMENT"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/rounded_rectangle_subtle"
            android:backgroundTint="@color/background"
            android:text="-"
            android:textColor="@color/accent"
            android:textStyle="bold"
            android:textSize="40sp"
            app:backgroundTint="@null" />
    </LinearLayout>

    <!-- Robot Position Layout -->
    <AutoCompleteTextView
        android:id="@+id/dropdown"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginTop="800dp"
        android:hint="Select an item"
        android:background="@drawable/dropdown_background"
        android:backgroundTint="@color/white"
        android:inputType="none"
        android:padding="8dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>